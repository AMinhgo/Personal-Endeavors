@{
    ViewData["Title"] = "Weather Today";
}

<h1>WeatherJS</h1>
<p id="name"></p>
<p id="temp"></p>
<p id="humidity"></p>
<p id="timezone"></p>
@* <p id="rain"></p> *@
<button>Get Weather</button>

<script>
    $(document).ready(function () {
        $("button").click(function () {
            $.get("http://api.openweathermap.org/data/2.5/weather?q=London&APPID=your_api_key", function (response) {
                //response
                console.log(response);
                $("#name").text(response.name);
                $("#temp").text(response.main.temp);
                $("#humidity").text(response.main.humidity);
                $("#timezone").text(response.timezone);
                // $("#rain").text(response.rain.1h);
            });
        });
    });
</script>